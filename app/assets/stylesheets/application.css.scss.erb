 @font-face {
 	font-family: 'meltdown';
 	src: url(<%= asset_path("meltdown.ttf") %>);
 	src: url(<%= asset_path("meltdown.ttf#iefix") %>) format('embedded-opentype'), /* IE6-IE8 */
    url(<%= asset_path("meltdown.ttf") %>)  format('truetype'), /* Safari, Android, iOS */
       }
       
 html {
 	box-sizing:border-box;
 	}
 
 body {
 	font-family: 'Open Sans', sans-serif;
 	font-weight:300;
 	margin:0px;
 	}
 
 .main-content {
 	text-align: center;
 }

ul.navbar {
	margin:0px;
	padding-left:10px;
	border:0px;
}

 .food-btn {
 	margin: auto;
    width: 25%;
 }
 
 .header {
 	width:100%;
 	background-color:#FADA0D;
 	font-weight:300;
 	}
 
 .nav-link {
 	color:#7b6c0c;
 	text-decoration:none;
 	}
 	
 li {
 	list-style-type:none;
 	color:#ffffff;
 	float:left;
 	margin-right:20px;
 	font-size:12vw;
 	}
 
 #hero_image img {
 	 width:100%;
 }
 
 
#game_content {
	width: 99%;
	margin: 5px auto;
	overflow-y: scroll;
	border:1px solid #000;
	height:660px;
	}

h1, h3 {
	font-weight:400;
	}
	
#donate {
	text-align: center;
	padding: 0px 10px;
	}

#donate p {
	margin-top:0px;
	}

.donationButton {
	display:block;
	margin-left: auto;
	margin-right: auto;
	}
	
 @media (min-width:1200px) {
 	.header {
 		 height:5vw;
 		 line-height:5vw;
 		 	}
 	li {
 		font-size: 1.5vw;
 		}
 	}
 
 @media (min-width:800px) and (max-width:1199px) {
 	.header {
 		 height:5vw;
 		 line-height:5vw;
 		 	}
 	li {
 		font-size: 2vw;
 		}
 	}
 	
 @media (min-width : 600px) and (max-width:799px) {
	 .header {
 		 	height:6.5vw;
 		 	line-height:6.5vw;
 		 	}
 	li {
 		font-size: 3vw;
 		}
 	}

@media (min-width : 300px) and (max-width:599px) {
	 .header {
 		 	height:9.5vw;
 		 	line-height:9.5vw;
 		 	}
 	li {
 		font-size: 4vw;
 		}
 	h1 {
 		font-size: 7vw;
 		}
 	h3 {
 		font-size: 5vw;
 		}
 	} 
