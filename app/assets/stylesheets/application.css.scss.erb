 @font-face {
 	font-family: 'meltdown';
 	src: url(<%= asset_path("meltdown.ttf") %>);
 	src: url(<%= asset_path("meltdown.ttf#iefix") %>) format('embedded-opentype'), /* IE6-IE8 */
    url(<%= asset_path("meltdown.ttf") %>)  format('truetype'), /* Safari, Android, iOS */
       }
 
@font-face {
  font-family: 'Kalam';
  src:url(<%= asset_path("Kalam-Regular.ttf") %>);
  font-weight: normal;
  font-style: normal;
}

@font-face {
  font-family: 'Bacon';
  src:url(<%= asset_path("Bacon.ttf") %>);
  font-weight: normal;
  font-style: normal;
}
 
@font-face {
  font-family: 'Honeydripper';
  src:url(<%= asset_path("Honeydripper.ttf") %>);
  font-weight: normal;
  font-style: normal;
}
     
 html {
 	box-sizing:border-box;
 	}
 
 body {
 	font-family: 'Open Sans', sans-serif;
 	font-weight:300;
	color:#4f4f4f;
 	margin:0px;
 	}
 
 .main-content {
 	text-align: center;
 }

ul.navbar {
	margin:0px;
	padding-left:10px;
	border:0px;
}

.button {
	padding:0px 20px;
	border-radius:4px;
	font-size:1em;
	font-weight:600;
	border:none;
	cursor:pointer;
	font-family:'Kalam';
	text-decoration:none; 
	}

.primButton {
	background-color:#00a2b0;
	color:#ffffff;
	height:40px;
	line-height:40px;
	}

.primButton:hover {
	background:none;
	color:#00a2b0;
	border: 2px solid #00a2b0;
	}

.secButton {
	display:inline-block;	
	color:#7b6c0c;
	border: 2px solid #7b6c0c;
	height:32px;
	line-height:36px;
	background:none;
	}

.secButton:hover {
	color:white;
	background-color:#7b6c0c;
	}

 .food-btn { 
    margin: auto;
    width: 25%;
 }
 
 .header {
 	width:100%;
	position:absolute;
	top:0px;
 	/*background-color:#FADA0D;*/
 	font-weight:300;
	font-family:"Kalam";
 	}
 
.header ul {
	float:right;
	}

 .nav-link {
 	color:#7b6c0c;
 	text-decoration:none;
 	}
 	
 li {
 	list-style-type:none;
 	color:#ffffff;
 	float:left;
 	margin-right:20px;
 	font-size:12vw;
 	}

#hero_image {
	text-align:center;
	}
 
#hero_image img {
 	 width:100%;
 }
 
#centered {
	width:100%;
	position:absolute;
	top:20%;
	}

#centered img {
	width:80%;
	}

#centered h1 {
	margin-top:-20px;
	}

.joinButton {
	background-color:#FADA0D;
	height:56px;
	line-height:56px;
	font-size:1.25em;
	color:#FFFFFF;
	}

.joinButton:hover {
	background:none;
	color:#FFFFFF;
	border: 2px solid #FFFFFF;
	}

#intro {
	padding: 10px 10px;
	text-align: center;
	}
 
#game_content {
	padding:20px 10px;
	box-shadow: inset 0 0 10px 0px #666666;
	background-color: rgba(250, 218, 13, 0.1);
	}

h1, h3 {
	font-weight:400;
	font-family:"Kalam";
	color:#7B6C0C;
	margin-top:0px;
	}
	
#donate {
	text-align: center;
	padding: 20px 10px;
	}

#donate h1 {
	margin-bottom:.3em;
	}

#donate p {
	margin-top:0px;
	}
	
 @media (min-width:1200px) {
 	.header {
 		 height:5vw;
 		 line-height:5vw;
 		 	}
 	li {
 		font-size: 1.5vw;
 		}
 	}
 
 @media (min-width:800px) and (max-width:1199px) {
 	.header {
 		 height:5vw;
 		 line-height:5vw;
 		 	}
 	li {
 		font-size: 2vw;
 		}
 	}
 	
 @media (min-width : 600px) and (max-width:799px) {
	 .header {
 		 	height:6.5vw;
 		 	line-height:6.5vw;
 		 	}
 	li {
 		font-size: 3vw;
 		}
 	}

@media (min-width : 300px) and (max-width:599px) {
	 .header {
 		 	height:9.5vw;
 		 	line-height:9.5vw;
 		 	}
 	li {
 		font-size: 4vw;
 		}
 	h1 {
 		font-size: 7vw;
 		}
 	h3 {
 		font-size: 5vw;
 		}
 	} 
