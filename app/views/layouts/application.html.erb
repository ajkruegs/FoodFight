<!DOCTYPE html>
<html>
  <head>
    <title>FoodFight</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-inverse">
      <div class="navbar-class">
        <ul class="nav navbar-nav">
          <li class="active"><a href="#">Join the Fight</a></li>
          <li><a href="#">About</a></li>
          <li><a href="#">Join the Fight</a></li>
        </ul>
      </div>
    </header>
    <div id="user-widget">
      <% if current_user %>
        Hi <strong><%= current_user.name %></strong>!
	  <%= link_to "Sign out", signout_path, id: "sign_out" %>
      <% else %>
        <%= button_to "Sign in with Facebook", "/auth/facebook", id: "sign_in" %>
      <% end %>
    </div>
  </body>
</html>
